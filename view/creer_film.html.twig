{# {% if message is not defined %}
	<div class="creer_films">
		<form action="creer_film" method="POST">
			<label for="title">Titre :</label><input class="form-control" type="text" name="title" id="title"><br>

			<label for="nom_acteur">Nom de l'acteur :</label><input class="form-control" type="text" name="nom_acteur" id="nom_acteur"><br>
			<div id="new_nom"></div>
		</form>
		<button name="add_nom" onclick="addNom()" class="btn btn-success">Ajouter un nom</button>
		<button name="remove_nom" onclick="removeNom()" class="btn btn-danger">Retirer un nom</button>
		<input type="hidden" value="1" id="total_nom"><br><br>

		<form action="creer_film" method="POST">
			<label for="prenom_acteur">Prenom de l'acteur :</label><input class="form-control" type="text" name="prenom_acteur" id="prenom_acteur"><br>
			<div id="new_prenom"></div>
		</form>
		<button name="add_prenom" onclick="addPrenom()" class="btn btn-success">Aouter un prenom</button>
		<button name="remove_prenom" onclick="removePrenom()" class="btn btn-danger">Retirer un prenom</button>
